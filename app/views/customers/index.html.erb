<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Compagny name</th>
      <th>Compagny headquarter address</th>
      <th>Full name of the compagny contact</th>
      <th>Compagny contact number</th>
      <th>Email of the compagny contact</th>
      <th>Compagny description</th>
      <th>Full name of the technical authority</th>
      <th>Technical authority phone for service</th>
      <th>Technical manager email for service</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.UserId %></td>
        <td><%= customer.compagny_Name %></td>
        <td><%= customer.compagny_headquarter_address %></td>
        <td><%= customer.Full_Name_of_the_compagny_contact %></td>
        <td><%= customer.compagny_contact_number %></td>
        <td><%= customer.email_of_the_compagny_contact %></td>
        <td><%= customer.compagny_description %></td>
        <td><%= customer.Full_name_of_the_technical_authority %></td>
        <td><%= customer.technical_authority_phone_for_service %></td>
        <td><%= customer.technical_manager_email_for_service %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

